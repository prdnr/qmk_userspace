# Link Time Optimization
EXTRAFLAGS += -flto

# Combos - key chords
COMBO_ENABLE=yes

# Caps Words - a smarter caps lock
# ... that doesn't play super will with tapdance
# when tapdance is on alpha keys or minus
CAPS_WORD_ENABLE = yes

# Tap Dance - different action on repeat press
TAP_DANCE_ENABLE = yes

# Auto Shift - hold key to shift
AUTO_SHIFT_ENABLE = yes

# Dynamic Macros - record and replay keystrokes
DYNAMIC_MACRO_ENABLE = yes

# Disable backlighting (pcb supports it but there are no LEDs).
BACKLIGHT_ENABLE = no

IOS_DEVICE_ENABLE = yes      # connect to IOS device (iPad,iPhone)

